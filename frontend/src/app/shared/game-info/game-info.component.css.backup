/* Overlay and Container */
.info-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.2s ease-in;
  overflow-y: auto;
  padding: 20px;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.info-content {
  max-width: 1000px;
  width: 100%;
  max-height: 90vh;
  animation: slideUp 0.3s ease-out;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from {
    transform: translateY(50px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Header */
.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
  border-bottom: 3px solid var(--accent);
  padding-bottom: 1rem;
}

.info-header h1 {
  margin: 0;
  font-size: 1.8rem;
  color: var(--accent);
  font-weight: 700;
}

.close-btn {
  background: none;
  border: none;
  font-size: 2.5rem;
  color: var(--text-muted);
  cursor: pointer;
  padding: 0;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s;
  line-height: 1;
}

.close-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--text);
  transform: rotate(90deg);
}

/* Tab Navigation */
.tab-nav {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
  flex-wrap: wrap;
  border-bottom: 2px solid var(--border);
  padding-bottom: 0.5rem;
}

.tab-btn {
  padding: 0.75rem 1.25rem;
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: 8px 8px 0 0;
  color: var(--text-muted);
  cursor: pointer;
  font-size: 0.95rem;
  font-weight: 500;
  transition: all 0.2s;
  white-space: nowrap;
}

.tab-btn:hover {
  background: var(--card);
  color: var(--text);
  border-color: var(--accent);
}

.tab-btn.active {
  background: var(--accent);
  color: white;
  border-color: var(--accent);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
}

/* Tab Content */
.tab-content {
  overflow-y: auto;
  max-height: calc(90vh - 250px);
  padding-right: 0.5rem;
}

.tab-content::-webkit-scrollbar {
  width: 8px;
}

.tab-content::-webkit-scrollbar-track {
  background: var(--bg);
  border-radius: 4px;
}

.tab-content::-webkit-scrollbar-thumb {
  background: var(--accent);
  border-radius: 4px;
}

.tab-content::-webkit-scrollbar-thumb:hover {
  background: var(--accentdark);
}

/* Section Styling */
.section {
  animation: fadeIn 0.3s ease-in;
}

.section h2 {
  font-size: 1.6rem;
  color: var(--accent);
  margin: 0 0 1rem 0;
  font-weight: 700;
}

.section .intro {
  font-size: 1.1rem;
  color: var(--text);
  margin-bottom: 1.5rem;
  line-height: 1.6;
  font-weight: 400;
}

.subsection {
  margin-bottom: 2rem;
}

.subsection h3 {
  font-size: 1.25rem;
  color: var(--accent);
  margin: 0 0 0.75rem 0;
  font-weight: 600;
}

.subsection p {
  color: var(--text);
  line-height: 1.6;
  margin-bottom: 0.75rem;
}

.subsection ul,
.subsection ol {
  color: var(--text);
  line-height: 1.8;
  margin: 0.5rem 0 1rem 1.5rem;
}

.subsection li {
  margin-bottom: 0.5rem;
}

.subsection li strong {
  color: var(--accent);
}

/* Feature Grid */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
  margin: 1.5rem 0;
}

.feature-card {
  background: rgba(139, 92, 246, 0.1);
  border: 1px solid var(--accent);
  border-radius: 8px;
  padding: 1.25rem;
  transition: all 0.2s;
}

.feature-card:hover {
  background: rgba(139, 92, 246, 0.15);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.2);
}

.feature-card h3 {
  font-size: 1.1rem;
  color: var(--accent);
  margin: 0 0 0.5rem 0;
  font-weight: 600;
}

.feature-card p {
  margin: 0;
  color: var(--text);
  font-size: 0.95rem;
  line-height: 1.5;
}

/* Info Boxes */
.info-box {
  background: rgba(59, 130, 246, 0.1);
  border-left: 4px solid #3b82f6;
  border-radius: 6px;
  padding: 1.25rem;
  margin: 1.5rem 0;
}

.info-box h3 {
  font-size: 1.15rem;
  color: #3b82f6;
  margin: 0 0 0.75rem 0;
  font-weight: 600;
}

.info-box ul {
  margin: 0.5rem 0 0 1.5rem;
  color: var(--text);
  line-height: 1.7;
}

.info-box li {
  margin-bottom: 0.5rem;
}

.info-box p {
  margin: 0 0 0.5rem 0;
  color: var(--text);
  line-height: 1.6;
}

/* Formula Box */
.formula-box {
  background: rgba(34, 197, 94, 0.1);
  border: 2px solid #22c55e;
  border-radius: 8px;
  padding: 1.25rem;
  margin: 1.5rem 0;
}

.formula-box h3 {
  font-size: 1.15rem;
  color: #22c55e;
  margin: 0 0 0.75rem 0;
  font-weight: 600;
}

.formula-box code {
  display: block;
  background: rgba(0, 0, 0, 0.3);
  padding: 0.75rem 1rem;
  border-radius: 6px;
  font-family: 'Courier New', monospace;
  font-size: 1.05rem;
  color: #22c55e;
  margin: 0.75rem 0;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.formula-box ul {
  margin: 0.75rem 0 0 1.5rem;
  color: var(--text);
  line-height: 1.7;
}

.formula-box li {
  margin-bottom: 0.5rem;
}

.formula-box li code {
  display: inline;
  background: rgba(0, 0, 0, 0.3);
  padding: 0.2rem 0.5rem;
  border-radius: 4px;
  font-size: 0.9rem;
  color: #22c55e;
  margin: 0;
}

.formula-box p {
  margin: 0.5rem 0;
  color: var(--text);
  line-height: 1.6;
}

.formula-box .note {
  color: var(--text-muted);
  font-size: 0.9rem;
  font-style: italic;
  margin-top: 0.5rem;
}

/* Warning Box */
.warning-box {
  background: rgba(239, 68, 68, 0.1);
  border-left: 4px solid #ef4444;
  border-radius: 6px;
  padding: 1.25rem;
  margin: 1.5rem 0;
}

.warning-box h3 {
  font-size: 1.15rem;
  color: #ef4444;
  margin: 0 0 0.75rem 0;
  font-weight: 600;
}

.warning-box p {
  margin: 0 0 0.5rem 0;
  color: var(--text);
  line-height: 1.6;
}

.warning-box ul {
  margin: 0.5rem 0 0 1.5rem;
  color: var(--text);
  line-height: 1.7;
}

.warning-box li {
  margin-bottom: 0.5rem;
}

/* Stats Table */
.stats-table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
}

.stats-table thead {
  background: rgba(139, 92, 246, 0.2);
}

.stats-table th {
  padding: 0.75rem;
  text-align: left;
  font-weight: 600;
  color: var(--accent);
  border-bottom: 2px solid var(--accent);
}

.stats-table td {
  padding: 0.75rem;
  color: var(--text);
  border-bottom: 1px solid var(--border);
}

.stats-table tbody tr:hover {
  background: rgba(139, 92, 246, 0.05);
}

/* Note styling */
.note {
  color: var(--text-muted);
  font-size: 0.9rem;
  font-style: italic;
  margin-top: 0.5rem;
}

/* Footer */
.info-footer {
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 2px solid var(--border);
  display: flex;
  justify-content: center;
}

.close-footer-btn {
  padding: 0.75rem 2rem;
  background: var(--accent);
  border: none;
  border-radius: 8px;
  color: white;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
}

.close-footer-btn:hover {
  background: var(--accentdark);
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.4);
}

/* Responsive Design */
@media (max-width: 768px) {
  .info-content {
    max-width: 100%;
    max-height: 95vh;
  }

  .info-header h1 {
    font-size: 1.4rem;
  }

  .tab-nav {
    gap: 0.25rem;
  }

  .tab-btn {
    padding: 0.5rem 0.75rem;
    font-size: 0.85rem;
  }

  .feature-grid {
    grid-template-columns: 1fr;
  }

  .section h2 {
    font-size: 1.3rem;
  }

  .subsection h3 {
    font-size: 1.1rem;
  }
}

@media (max-width: 480px) {
  .info-overlay {
    padding: 10px;
  }

  .info-header h1 {
    font-size: 1.2rem;
  }

  .tab-btn {
    font-size: 0.8rem;
    padding: 0.4rem 0.6rem;
  }
}
